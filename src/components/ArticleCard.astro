---
const { article } = Astro.props;
---
<div class="article-card">
  <div class="container-before">
    <h4>{article.text}</h4>
    <div class="time">2023/11/12</div>
  </div>
  <div class="container-after">
    <p>
      {article.introduction}
    </p>
  </div>
</div>
<style>
  .article-card {
    position: relative;
    width: 260px;
    height: 160px;
    padding: 20px;
    /* 设置阴影 */
    box-shadow: 20px 20px 50px rgba(0, 0, 0, 0.5);
    border-radius: 15px;
    /* 设置card的背景色 */
    background: rgba(255, 255, 255, 0.1);
    overflow: hidden;
    display: flex;
    /* justify-content: center;
  align-items: center; */
    border-top: 1px solid rgba(255, 255, 255, 0.5);
    border-left: 1px solid rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(5px);

    cursor: pointer;
  }
  .article-card:active {
  transform: scale(0.98);
  }
  .article-card::after {
    content: '点击了解更多';
    text-align: center;
    position: absolute;
    left: 0;
    bottom: -60px;
    background: #00AC7C;
    color: #fff;
    padding-top: 5px;
    height: 40px;
    width: 100%;
    transition: all 0.6s;
    font-weight: 600;
    text-transform: uppercase;
    opacity: 0;
  }
  .article-card:hover::after {
    bottom: 0;
    opacity: 1;
  }
  .article-card:hover .container-before {
    opacity: 0;
    transform: translateX(-300px);
  }
  .article-card:hover .container-after {
    opacity: 1;
    transform: translateX(0px);
  }
  .container-before {
    position: absolute;
    opacity: 1;
    transform: translateX(0px);
    transition: 0.6s;
  }
  .container-before h4 {
    height: 80px;
  }
  .container-before .time {
    position: absolute;
  }
  .container-after {
    position: absolute;
    opacity: 0;
    transform: translateX(300px);
    transition: 0.6s;
  }
  .container-after p {
    overflow: hidden;
    text-overflow: ellipsis;
    display:  -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
  }
</style>
